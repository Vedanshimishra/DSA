#include <iostream>
using namespace std;

int main() {

  int n, i;
  cin>>n;
  cout<<"Enter a positive integer: ";
  

  
  

  for (i = 2; i <= n / 2; ++i) {

    
    if (n % i == 0) {
      cout<<"it is not a prime number."<< n;
      break;
    }
  

  
    
  else{
    printf("%d is  a prime number.", n);
    break;}}

  return 0;}
